<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="udtp_display_label">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="time_label">
        <item name="android:textSize">@dimen/time_label_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ampm_label">
        <item name="android:textSize">@dimen/ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="day_of_week_label_condensed"/>

    <style name="udtp_year_label" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="udtp_year_label.focused">
        <item name="android:textSize">24sp</item>
        <item name="android:height">56sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog.InverseLand">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


</resources>
